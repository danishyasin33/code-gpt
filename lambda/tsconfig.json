{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "rootDirs": ["src"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],

}
